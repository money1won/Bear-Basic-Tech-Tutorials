# Useful when dealing with large or dynamic data sets
# EX. updated a list of values with an unknown length

my_list = [1] * 1000

# for i in enumerate(my_list):
#     print(i)


# EX. Find how many "s" are in the sentence
sentence = "someone really likes to spin their wheels in python tutorials"
count = 0

for i in sentence:
    if i == "s":
        count += 1

# print("Python found " + str(count) + " S's in the sentence!")
